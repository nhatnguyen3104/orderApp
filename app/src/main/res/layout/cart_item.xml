<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="87dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgCart"
                android:layout_width="64dp"
                android:layout_height="64dp"
                tools:srcCompat="@tools:sample/avatars"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title"
                android:text="tv_title"
                android:textSize="15sp"
                android:textStyle="italic"
                android:layout_marginLeft="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/imgCart"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_price"
                android:text="tv_price"
                android:textSize="19sp"
                android:textColor="#BE1515"
                android:layout_marginLeft="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                app:layout_constraintStart_toEndOf="@id/imgCart"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:id="@+id/btn_minus"
                android:text="-"
                android:background="@drawable/custom_btn"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="@id/tv_count"
                android:layout_marginRight="40dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:id="@+id/btn_plus"
                android:text="+"
                android:background="@drawable/custom_btn"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="26dp"
                android:text="1"
                android:id="@+id/tv_count"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="@id/btn_plus"
                app:layout_constraintStart_toStartOf="@id/btn_minus"
                android:layout_marginTop="10dp"
                android:gravity="center"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="92dp"
                android:layout_height="26dp"
                android:id="@+id/btn_delete"
                android:drawableTop="@drawable/delete_24"
                android:background="@drawable/custom_btn_delete"
                app:layout_constraintTop_toBottomOf="@id/tv_count"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>